<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.florintiron.xaporepolist.presentation.details.RepoDetailsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/line_divider"
        android:orientation="vertical"
        android:padding="8dp"
        android:showDividers="middle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/repo_details_name_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Google Repository Name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/repo_details_description_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descriptionTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Google Repository Details\n
         Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem\n
         Ipsum Lorem Ipsum Lorem Ipsum" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/repo_details_issues_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/issuesTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Yes" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/repo_details_owner_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ownerTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Martin Fowler" />
    </LinearLayout>
</layout>